body {
	background: url(<%= asset_path 'starry_night.jpg' %>) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

/*USER FORMATTING*/

.random_picture {
	height: 300px;
	border-radius: 30px;
	position: absolute;
	margin-left: 8%;
}

.user_header {
	width: 100%;
	text-align: center;
	color: white;
	font-family: Lobster;
	font-size: 45px;
}

.hello_there {
	padding: 1%;
	font-size: 20px;
	background-color: rgba(255,255,255,0.4);
	border-radius: 10px;
	margin-top: 5%;
	margin-bottom: 1%;
	margin-left: 60%;
	color: white;
	width: 30%;
	height: 25%;
}

.user_update_button {
	margin-top: 1%;
	margin-bottom: 10%;
	margin-left: 67%;
	padding: 1%;
	background-color: rgba(255,255,255,0.4);
	border-radius: 10px;
	text-decoration: none;
	color: white;
	width: 15%;
	font-size: 20px;
	text-align: center;
	font-family: Lobster;
}

.user_update_link {
	color: white;
	text-decoration: none;
	font-family: Lobster;
}

.user_update_link:hover {
	color: red;
	text-decoration: none;
	font-family: Lobster;
}


