<div class="user_header2">
  Specific Article Page
</div>

<div class="articles2">
  <u>City:</u> <%= @city %><br>

  <u>Title:</u> <%= @article.title %><br>

  <u>Details:</u> <%= @article.content %><br>
  <u>Creaters Name:</u> <%= @author %><br>

  <br>

  	<%= link_to "Edit this Article", edit_article_path(@article) %><br>

  	<%= link_to "Delete this Article", delete_article_path(@article), method: :delete, :data => {:confirm => "Are you sure you want to keep this cool interstellar destination a secret?"} %><br>

  <hr>

     <h3>Comments</h3>

          <%= form_for [@article, Comment.new] do |f| %>

              <%= f.text_area :content, :rows => 3, :cols => 58, :class => "comment_text_area" %>
              <br>
              <div class='row'>
                <div class='col-md-4 col-md-offset-8'>
                  <%= f.submit "Add comment", class: 'btn btn-primary' %>
                </div>
              </div>

          <% end %><br>

   		<% @comments.each do |comment| %>
            <p>
              <%= comment.content %> - <%= time_ago_in_words comment.created_at %> ago by <strong><%= User.find(comment.user_id).email %></strong>
            </p>
          <% end %>
</div>


