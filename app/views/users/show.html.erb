
<body>
	<h1 class="user_header"> User Profile</h1>
	<div class="hello_there">
		Why Hello there, <%= @user.first_name %>!<br>

		You are from: <%= @user.city %><br>

		<%= @user.created_at %><br>
	</div>
	 <% if current_user.id == @user.id %>
		<div class="user_update_button">
			<%= link_to "Update User Info", edit_user_path(@user), { :class=>"user_update_link" } %> 
		</div>
		<h1 class="articles_header">Articles</h1>
		<div class="article_create_button">
			<%= link_to "Create New Article", new_article_path, { :class=>"article_update_link" }  %>
		</div>
	<% end %>

	<% @user.articles.each do |article| %>
		<div class="articles">
		<%= link_to article.title, article %>
	    <li><%= article.title %></li>
	    <li><%= article.city %></li>
	    <li><%= article.content %></li>
		    <% if current_user.id == article.user_id %>
			    <%= link_to "Edit this Article", edit_article_path(article.id)%><br>
				<%= link_to "Delete this Article", delete_article_path(article.id), method: :delete, :data => {:confirm => "Are you sure you want to delete this date?"} %><br>
		    <% end %>
	    </div>
	<% end %>
</body>
</html>









