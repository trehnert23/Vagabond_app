<H1>Cities Page</H1>


<%= @cities.name %>


<% @cities.articles.each do |article| %>
    <li><%= link_to article.title, article %></li>
    <li><%= article.city %></li>
    <li><%= article.content %></li>
    <% if current_user %>
	    <% if current_user.id == article.user_id %>
		    <%= link_to "Edit this Article", edit_article_path(article) %><br>
			<%= link_to "Delete this Article", delete_article_path(article), method: :delete, :data => {:confirm => "Are you sure you want to delete this date?"} %>
		<% end %>
	<% end %>
<% end %>


 
